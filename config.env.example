# Cấu hình API cho Thư Viện AI
# Copy file này thành config.env và điền thông tin API

# Key4U API Key
KEY4U_API_KEY=your_key4u_api_key_here

# Cấu hình server
SERVER_PORT=8001
DEBUG_MODE=false

# Cấu hình MySQL Database
DB_HOST=localhost
DB_PORT=3306
DB_NAME=thuvien_ai
DB_USERNAME=root
DB_PASSWORD=your_mysql_password

# Cấu hình uploads
UPLOAD_PATH=data/uploads/
MAX_FILE_SIZE=10MB

# JWT Secret Key (thay đổi trong production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Cấu hình AI tool nội bộ (FastAPI)
AI_TOOL_BASE_URL=http://127.0.0.1:8001
AI_TOOL_TIMEOUT=120
# AI_TOOL_INTERNAL_KEY=leave-empty-to-use-KEY4U_API_KEY